{
  "latex-workshop.latex.env": {
    "PATH": "/Library/TeX/texbin:${env:PATH}"
  },

  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "/Library/TeX/texbin/latexmk",
      "args": [
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {
        "PATH": "/Library/TeX/texbin:/usr/bin:/bin:/usr/sbin:/sbin"
      }
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (pdf)",
      "tools": ["latexmk"]
    }
  ],

  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.view.pdf.viewer": "tab",

  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.method": "glob",
  "latex-workshop.latex.clean.fileTypes": [
    "%DOCFILE%.aux",
    "%DOCFILE%.bbl",
    "%DOCFILE%.bcf",
    "%DOCFILE%.blg",
    "%DOCFILE%.fdb_latexmk",
    "%DOCFILE%.fls",
    "%DOCFILE%.idx",
    "%DOCFILE%.ilg",
    "%DOCFILE%.ind",
    "%DOCFILE%.lof",
    "%DOCFILE%.log",
    "%DOCFILE%.lot",
    "%DOCFILE%.nav",
    "%DOCFILE%.out",
    "%DOCFILE%.run.xml",
    "%DOCFILE%.snm",
    "%DOCFILE%.synctex.gz",
    "%DOCFILE%.toc",
    "%DOCFILE%.vrb"
  ],

  "latex-workshop.latex.outDir": "%DIR%/.build"
}

